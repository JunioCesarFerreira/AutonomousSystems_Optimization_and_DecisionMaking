{
  "name": "PDDL Planutils Service DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "forwardPorts": [5555],
  "postCreateCommand": "planutils activate",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "pddl.planners": [
          {
            "title": "Planutils Local Service",
            "kind": "SERVICE_SYNC",
            "url": "http://localhost:5555/package",
            "canConfigure": true
          }
        ],
        "pddl.selectedPlanner": "Planutils Local Service"
      },
      "extensions": [
        "jan-dolejsi.pddl",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
